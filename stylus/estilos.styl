@import "normalize.styl"
@import "fonts.styl"

gris_oscuro= #333333
gris_claro= #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-family "Varela Round", sans-serif
	font-size 16px

figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.container
	font-size 0
	padding 1.4rem
	text-align center
.action 
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro

.menu
	display none
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right 
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em 0
	position relative
	.max
	.min
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		height 5px
		margin 0 auto
		width 75%
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px
.autor
	color gris_claro
.center-block
	margin 0 auto 
.center-text
	text-align center
.right-text
	text-align right 
.relative
	position relative
.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center

.song
	display inline-block
	font-size 1rem
	margin-bottom 1em 
	margin-right 1em 
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
		
	p 
		margin .5em 0

.playing  
	&.small
		width 20em
	
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em  
	
.search-icon
	color gris_claro
	left .5em
	position absolute
	top .8em

.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			height auto
			width 100%
	.playing
		&.medium 
			width auto

@media screen and (min-width: 1000px)

	body
		background gris_mas_claro
	.button-menu
		display none
	.menu
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer 
				display block 
				padding 1em 
				text-transform uppercase
				&:hover
					border-top 5px solid gris_oscuro
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		background white 
		overflow hidden 
		padding 1.3em 0 
	.avatar
		height 38px
		width 38px
	.username
		color gris_claro
		position relative
		top 9px 
		margin-left .5e
		&:after
			 border-left 7px solid transparent
			 border-right 7px solid transparent
			 border-top 9px solid gris_claro
			 content ""
			 display inline-block 
			 margin-right .5em
			 
		
		

	